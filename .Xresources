!--------------------------------------------------
!                       
!                       Xft           
!                       
!--------------------------------------------------

Xft.antialias:  true 
Xft.autohint:   false 
Xft.dpi:        96
Xft.hinting:    true 
Xft.hintstyle:  hintfull 
Xft.lcdfilter:  lcddefault
Xft.rgba:       rgb



!--------------------------------------------------
!                       
!                      URxvt          
!                       
!--------------------------------------------------

URxvt*depth:                        32
URxvt*internalBorder:               0
URxvt*dynamicColors:                on
!URxvt*urgentOnBell:                 true
! do not work on i3 with borderless true
!URxvt*borderLess:                   true
URxvt*scrollBar:                    false
URxvt*cursorBlink:                  true
URxvt*cursorUnderline:              false
URxvt*cursorColor:                  #737077
URxvt*scrollColor:                  #151515
URxvt*underlineURLs:                true
URxvt.letterSpace:                  -1

!URxvt.font: xft:Liberation Mono:size=14
URxvt.font: xft:Fira Mono:size=14

URxvt.colorIT:                      #b291af
URxvt.colorBD:                      #6f6776
URxvt.colorUL:                      #e9cfd3
URxvt*color12:                      rgb:5c/5c/ff


!--------------------------------------------------
!                       
!                      Colors         
!                       
!--------------------------------------------------

*background: #282828 
*foreground: #ebdbb2

!#1d2021
!#282828 

! black & gray
*color0:  #1d2021
*color8:  #928374

! red
*color1:  #cc241d
*color9:  #fb4934 

! green
*color2:  #98971a
*color10: #b8bb26

! yellow
*color3:  #d79921
*color11: #fabd2f

! blue
*color4:  #458588
*color12: #83a598

! purple
*color5:  #b16286
*color13: #d3869b

! aqua
*color6:  #689d6a
*color14: #8ec07c

! gray
*color7:  #a89984
*color15: #ebdbb2



!--------------------------------------------------
!                       
!                    man colors         
!                       
!--------------------------------------------------

*VT100.colorBDMode:                  true
*VT100.colorBD:                      red
*VT100.colorULMode:                  true
*VT100.colorUL:                      cyan   
*VT100.veryBoldColors:               6



!--------------------------------------------------
!                       
!                      xclock         
!                       
!--------------------------------------------------

xclock*majorColor:                  #9a875f
xclock*minorColor:                  #9a875f
xclock*minuteColor:                 #9a875f
xclock*hourColor:                   #9a875f
xclock*secondColor:                 #9a875f



!--------------------------------------------------
!                       
!                       rofi             
!                       
!--------------------------------------------------

rofi.lines:                         7
rofi.columns:                       1
rofi.font:                          Fira Mono 12
rofi.color-enabled:                 true
rofi.separator-style:               none 
rofi.width:                         33
rofi.line-padding:                  6
rofi.hide-scrollbar:                True
rofi.bw:                            0

rofi.color-normal: argb:00000000, #aa5448, argb:00000000, #3c3836, #b26356
rofi.color-window: #313131, #000000, #832757
